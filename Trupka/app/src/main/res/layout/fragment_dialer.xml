<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.c360.celsius.trupka.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/display"
                layout="@layout/dialer_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/diler_editor"
                android:layout_gravity="center_horizontal" />

            <include
                android:id="@+id/diler_editor"
                layout="@layout/dialer_digit_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffffff">

        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:stretchColumns="0,1,2">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1">


                <include
                    android:id="@+id/one"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />


                <include
                    android:id="@+id/two"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/three"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1">

                <include
                    android:id="@+id/four"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />


                <include
                    android:id="@+id/five"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/six"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />


            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1">

                <include
                    android:id="@+id/seven"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />


                <include
                    android:id="@+id/eight"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/nine"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1">

                <include
                    android:id="@+id/redail"
                    layout="@layout/redial_custom_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/star"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />


                <include
                    android:id="@+id/zero"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/hashtag"
                    layout="@layout/dialer_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/dial"
                    layout="@layout/dialer_custom_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />


            </TableRow>


        </TableLayout>


    </LinearLayout>



</LinearLayout>
